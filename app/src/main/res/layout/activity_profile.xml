<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="30dp"
        tools:context=".ProfileActivity">

        <ImageView
            android:id="@+id/profileLogo"
            android:layout_width="128dp"
            android:layout_height="122dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="249dp"
            android:layout_height="252dp"
            android:src="@drawable/me"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="239dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="AZZUHRA"
            android:textColor="#5F3868"
            android:textSize="40dp"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="33dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/profileNim"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="10118396"
            android:textColor="#5F3868"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="93dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/profileClass"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="IF 9"
            android:textColor="#5F3868"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="143dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:padding="20dp"
            android:text="Mahasiswa Unikom jurusan Teknik Informatika semester 6"
            android:textColor="@color/white"
            android:textSize="28dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="541dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>